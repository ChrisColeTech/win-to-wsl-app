{
  "appId": "com.pathconverter.app",
  "productName": "Win to WSL",
  "electronVersion": "27.0.0",
  "directories": {
    "output": "dist",
    "buildResources": "electron/assets"
  },
  "publish": {
    "provider": "github",
    "owner": "ChrisColeTech",
    "repo": "win-to-wsl-app"
  },
  "files": [
    "electron/dist/**/*",
    "electron/assets/**/*"
  ],
  "extraResources": [
    {
      "from": "frontend/dist",
      "to": "frontend/dist"
    }
  ],
  "extraMetadata": {
    "main": "electron/dist/main.js"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "electron/assets/icons/win/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "mac": {
    "target": ["dmg", "zip"],
    "icon": "electron/assets/icons/mac/icon.icns",
    "category": "public.app-category.developer-tools"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "electron/assets/icons/png",
    "category": "Development"
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  }
}
