{
  "name": "win-to-wsl-app",
  "version": "1.0.0",
  "private": true,
  "description": "Path converter for Windows/WSL/MSYS formats",
  "scripts": {
    "dev": "concurrently -n \"frontend,electron\" -c \"blue,green\" \"npm run dev --workspace=frontend\" \"wait-on http://localhost:5173 && npm run dev --workspace=electron\"",
    "build": "npm run build --workspace=frontend && npm run build --workspace=electron",
    "start": "npm run start --workspace=electron",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "wait-on": "^8.0.1"
  },
  "workspaces": [
    "frontend",
    "electron"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC"
}
